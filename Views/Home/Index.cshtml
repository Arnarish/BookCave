@model List<BookCave.Models.ViewModels.BookListViewModel>
@{
    ViewData["Title"] = "Home";
}
<div class="search-bar">
    <form method="get" id="front-page-search" asp-action="SearchResults">

        <select class="form-control" name="genre" form="front-page-search">
            <option value="" disabled selected>Genre</option>
            <option value="classics" name="genre">Classics</option>
            <option value="comics" name="genre">Comics</option>
            <option value="drama" name="genre">Drama</option>
            <option value="educational" name="genre">Educational</option>
            <option value="fantasy" name="genre">Fantasy</option>
            <option value="horror" name="genre">Horror</option>
            <option value="scifi" name="genre">Science fiction</option>
            <option value="thriller" name="genre">Thriller</option>
        </select>
        
        <input type="search" class="form-control" id="sel1" name="searchString" placeholder="Book title, author or ISBN">
        <input type="submit" value="Search" class="btn btn-primary" id="search-button">
    </form>
</div>

<div id="staff-picks">
    <form>
        <fieldset>
            <legend>Random goodreads</legend>
            <div id="search-results-front-page">
                <table class="table table-striped table-hover">
                    <tr>
                        <th><b>Image</b></th>
                        <th><b></b>Title</b></th>
                        <th><b>Author</b></th>
                        <th><b>Genre</b></th>
                        <th><b>Price</b></th>
                    </tr>
                     @foreach(var book in Model)
                    {
                        <tr>
                            <td><img src="@book.Image" alt="book-cover" width="80" height="120"></td>
                            <td><a asp-controller="Book" asp-action="Details" asp-route-id="@book.BookId">@book.Title</a></td> 
                            <td><a asp-controller="Book" asp-action="AuthorDetails">@book.Author</a></td>
                            <td>@book.Genre</td>
                            <td>
                                <div id="price-of-item-front-page"><b>$@book.Price</b></div>
                                <button type="button" class="btn btn-info btn-lg">
                                    <span class="glyphicon glyphicon-shopping-cart"></span>
                                    @Html.ActionLink("Add to cart", "AddToCart", "ShoppingCart", new { id = book.BookId }, "")
                                </button>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </fieldset>
    </form>
</div>
