@model List<BookCave.Models.ViewModels.BookListViewModel>
@{
    ViewData["Title"] = "Home";
}
<div class="search-bar">
    <form method="get" id="front-page-search">
        
        <select name="genre" form="front-page-search">
            <option value="" disabled selected>Genre</option>
            <option value="classics">Classics</option>
            <option value="comics">Comics</option>
            <option value="drama">Drama</option>
            <option value="educational">Educational</option>
            <option value="fantasy">Fantasy</option>
            <option value="horror">Horror</option>
            <option value="sciencefiction">Science fiction</option>
            <option value="thriller">Thriller</option>
        </select>
        <input type="search" name="searchString" placeholder="Book title, author or ISBN">
        <input type="submit" value="Search">
    </form>
</div>