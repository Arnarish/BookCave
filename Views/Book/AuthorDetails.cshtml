@model List<BookCave.Models.ViewModels.BookListViewModel>
@{
    ViewData["Title"] = "Author details";
}

<h1>Books available by author @Model[0].Author</h1>
<hr>

<table class="table table-striped table-hover">
    <tr>
        <th><b>Image</b></th>
        <th><b>Title</b></th>
        <th><b>Genre</b></th>
        <th><b>Price</b></th>
    </tr>
        @foreach(var book in Model)
    {
        <tr>
            <td><img src="@book.Image" alt="book-cover" width="80" height="120"></td>
            <td><a asp-controller="Book" asp-action="Details" asp-route-id="@book.BookId">@book.Title</a></td> 
            <td>@book.Genre</td>
            <td>
                <div id="price-of-item-front-page"><b>$@book.Price</b></div>
                <button type="button" class="btn btn-info btn-lg">
                    <span class="glyphicon glyphicon-shopping-cart"></span>
                </button>
            </td>
        </tr>
    }
</table>