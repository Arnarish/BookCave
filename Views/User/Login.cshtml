@model BookCave.Models.InputModels.LoginInputModel

@{
    ViewData["Title"] = "Log in";
}
<h1>Login</h1>

<form asp-action="Login" asp-controller="User" class="form-horizontal"method="POST">
    <div class="form-group">
        <input type="text" asp-for="Email" class="form-control" placeholder="Enter Email..." />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="password" asp-for="Password" class="form-control" placeholder="Enter password..." />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="checkbox">
        <label>
            <input type="checkbox" asp-for="RememberMe" /> Remember me.
        </label>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-default" value="Login" />
        <br>
        <input type="button" value="Forgotten password?" class="btn btn-link"/>
    </div>
</form>