@model authentication_repo.Model.ViewModels.LoginViewModel

<h1>Login</h1>

<form asp-action="Login" asp-controller="User" class="form-horizontal">
    <div class="from-group">
        <input type="email" aps-for="Email" class="form-control" placeholder="Enter email...">
    </div>
    <div class="from-group">
        <input type="password" asp-for="Password" class="form-control" placeholder="Enter password...">
    </div>
    <div class="checkbox">
        <label for="RememberMe">Remember me</label>
        <input type="checkbox" asp-for="RememberMe">
    </div>
    <div class="from-group">
        <input type="submit" class="btn btn-default" value="Login">
    </div>
</form>