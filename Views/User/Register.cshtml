@model BookCave.Models.ViewModels.RegisterViewModel

<h1>Register</h1>

<form asp-action="Register" asp-controller="User" class="form-horizontal" method="POST">
    <div class="form-group">
        <input autofocus="autofocus" type="email" asp-for="Email" class="form-control" placeholder="Enter email...">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input autofocus="autofocus" type="text" asp-for="FirstName" class="form-control" placeholder="Enter first name...">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input autofocus="autofocus" type="text" asp-for="LastName" class="form-control" placeholder="Enter last name...">
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label id="PasswordLabel">Password must contain atleast one uppercase letter, a special character and be atleast 8 characters long</label>
        <input autofocus="autofocus" type="password" asp-for="Password" class="form-control" placeholder="Enter password...">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input autofocus="autofocus" type="submit" class="btn btn-default" value="Register">
    </div>
</form>